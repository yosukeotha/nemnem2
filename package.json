{
  "name": "symbol-desktop-wallet",
  "description": "Symbol Wallet",
  "homepage": "https://github.com/nemfoundation/symbol-desktop-wallet",
  "version": "0.9.8-beta1",
  "author": {
    "name": "NEM Foundation",
    "email": "devs@nem.foundation"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nemfoundation/symbol-desktop-wallet.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron .",
    "test": "vue-cli-service test:unit",
    "dev": "vue-cli-service serve ",
    "build": "npm run build:web",
    "build:web": "rimraf dist && mkdir dist && tsc && vue-cli-service build",
    "release": "npm run build && npm run release:all",
    "release:all": "npm run release:mac && npm run release:win && npm run release:lin",
    "release:mac": "electron-builder --mac",
    "release:win": "electron-builder --win --ia32",
    "release:lin": "electron-builder --linux deb snap tar.xz",
    "lint:all:fix": "eslint src/ --ext .ts --fix && eslint src/ --ext .vue --fix && eslint __tests__/ --ext .ts --fix",
    "lint:all": "npm run lint:ts && npm run lint:vue && npm run lint:tests",
    "lint:tests": "eslint __tests__/ --ext .ts",
    "lint:ts": "eslint src/ --ext .ts",
    "lint:vue": "eslint src/ --ext .vue"
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "await-lock": "^2.0.1",
    "axios": "^0.19.0",
    "crypto": "^1.0.1",
    "request": "^2.88.0",
    "rss-parser": "^3.7.3",
    "rxjs": "^6.5.2",
    "trezor-connect": "^7.0.5",
    "vee-validate": "^3.2.3",
    "view-design": "^4.0.0",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-i18n": "^8.11.2",
    "vue-moment": "^4.1.0",
    "vue-number-animation": "1.0.5",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.1.3",
    "vue-rx": "^6.2.0",
    "vuedraggable": "^2.23.2",
    "vuex": "^3.0.1",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@types/crypto-js": "^3.1.43",
    "@types/jest": "^23.3.1",
    "@types/node": "^9.6.50",
    "@types/request": "^2.47.1",
    "@types/vue-moment": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "@vue/cli-plugin-babel": "^4.0.5",
    "@vue/cli-plugin-typescript": "^4.3.0",
    "@vue/cli-plugin-unit-jest": "^4.0.5",
    "@vue/cli-service": "^4.0.5",
    "@vue/eslint-config-typescript": "^5.0.1",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^25.2.6",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.7.0",
    "bufferutil": "^4.0.1",
    "cross-env": "^5.1.1",
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "electron-notarize": "^0.3.0",
    "electron-packager": "^14.2.1",
    "electron-updater": "^4.2.5",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.1.2",
    "flush-promises": "^1.0.2",
    "google-fonts-webpack-plugin": "^0.4.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.2.6",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "moment-timezone": "^0.5.26",
    "node-pre-gyp": "^0.13.0",
    "postcss-import": "^12.0.1",
    "postcss-pxtorem": "^4.0.1",
    "rimraf": "^3.0.2",
    "symbol-hd-wallets": "^0.9.2",
    "symbol-qr-library": "^0.9.0",
    "symbol-sdk": "^0.17.3",
    "ts-jest": "^25.3.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2",
    "utf-8-validate": "^5.0.2",
    "vue-jest": "^3.0.5",
    "vue-template-compiler": "^2.6.10"
  },
  "main": "./public/build.js",
  "build": {
    "appId": "io.nem.symbol.desktop-wallet",
    "extends": null,
    "copyright": "Copyright Â© 2019-2020 NEM Foundation",
    "productName": "Symbol Wallet",
    "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
    "icon": "./dist/assets/icons/Icon.icns",
    "files": [
      "dist/**/*",
      "package.json",
      "./public/build.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "mac": {
    "category": "public.app-category.finance",
    "target": "tar.gz",
    "icon": "./assets/icons/Icon.incs",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "asarUnpack": [
      "**/*.node"
    ]
  },
  "dmg": {
    "window": {
      "x": 100,
      "y": 100,
      "width": 500,
      "height": 400
    }
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "./assets/icons/Symbol.ico"
  },
  "linux": {
    "category": "Finance",
    "icon": "./assets/icons/Icon.incs"
  }
}
